datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Conversation {
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  message   Message?  @relation(name: "ConversationsOnMessage", fields: [messageId], references: [id])
  messageId String?
  messages  Message[] @relation(name: "ConversationOnMessages")
  responder String?
  updatedAt DateTime  @updatedAt
}

model Message {
  content        String?
  conversation   Conversation?  @relation(name: "ConversationOnMessages", fields: [conversationId], references: [id])
  conversationId String?
  conversations  Conversation[] @relation(name: "ConversationsOnMessage")
  createdAt      DateTime       @default(now())
  id             String         @id @default(cuid())
  sender         String?
  updatedAt      DateTime       @updatedAt
}

model Reply {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  initiator String?
  lastName  String?
  password  String
  roles     Json
  title     String?
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model PromptCategory {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model PromptHistory {
  change    Json?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  prompt    Prompt?   @relation(fields: [promptId], references: [id])
  promptId  String?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
}

model Prompt {
  category        String?
  content         String?
  createdAt       DateTime        @default(now())
  id              String          @id @default(cuid())
  promptHistories PromptHistory[]
  title           String?
  updatedAt       DateTime        @updatedAt
}
